{
  "manifest_version": 2,
  "name": "Szentírás",
  "description": "Bibliai hivatkozások beillesztése a Szentírás.hu oldalról",
  "version": "1.6.3",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "https://szentiras.eu/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "igemutato.js", "content.js" ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [ "background.js" ]
  },
  "web_accessible_resources": [
    "igemutato.css"
  ]
}
